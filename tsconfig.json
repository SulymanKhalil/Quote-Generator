{
  "compilerOptions": {
    "target": "ES2017",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": [
      "DOM",
      "ES2017"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*"
  ]
}